<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:layout_marginEnd="@dimen/activity_horizontal_margin"
android:layout_marginRight="@dimen/activity_horizontal_margin" android:baselineAligned="false"
android:divider="?android:attr/dividerHorizontal" android:orientation="horizontal"
android:showDividers="middle" tools:context="com.alex.abumov.myappportfolio.Spotify.SpotifyMainActivity">

<!--
This layout is a two-pane layout for the Items
master/detail flow.

-->

    <FrameLayout
        android:id="@+id/fragment"
        tools:context="com.alex.abumov.myappportfolio.Spotify.SpotifyMainActivityFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/fragment_track_list"
        tools:context="com.alex.abumov.myappportfolio.Spotify.SpotifyTrackListActivityFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />


</LinearLayout>
