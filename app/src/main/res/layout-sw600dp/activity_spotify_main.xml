<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginRight="16dp" android:baselineAligned="false"
android:divider="?android:attr/dividerHorizontal" android:orientation="horizontal"
android:showDividers="middle" tools:context="com.alex.abumov.myappportfolio.Spotify.SpotifyMainActivity">

<!--
This layout is a two-pane layout for the Items
master/detail flow.

-->

<fragment android:id="@+id/fragment"
    android:name="com.alex.abumov.myappportfolio.Spotify.SpotifyMainActivityFragment" android:layout_width="0dp"
    android:layout_height="match_parent" android:layout_weight="1"
    tools:layout="@layout/fragment_spotify_main" />

<fragment android:id="@+id/fragment_track_list"
    android:name="com.alex.abumov.myappportfolio.Spotify.SpotifyTrackListActivityFragment"
    tools:layout="@layout/fragment_spotify_track_list" android:layout_width="0dp"
    android:layout_weight="2"
    android:layout_height="match_parent" />


</LinearLayout>
