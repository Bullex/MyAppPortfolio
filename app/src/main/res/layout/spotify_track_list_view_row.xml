<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_view_row_selector"
    android:padding="8dp" >

    <!-- Thumbnail Image -->
    <ImageView
        android:id="@+id/ss_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/ss_thumbnail_content_description"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/ss_thumbnail"
        android:orientation="vertical">
        <!-- Track Title -->
        <TextView
            android:id="@+id/ss_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ss_list_view_row_title_size"
            android:layout_marginBottom="2dp"/>

        <!-- Album Title -->
        <TextView
            android:id="@+id/ss_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ss_list_view_row_title_size"/>
    </LinearLayout>
</RelativeLayout>