<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.alex.abumov.myappportfolio.Spotify.SpotifyMainActivityFragment">

    <EditText
        android:id="@+id/ss_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:hint="@string/ss_search_view_hint"/>
    <TextView
        android:id="@+id/ss_not_found_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:layout_below="@id/ss_search_view"
        android:textSize="40sp"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/ss_not_found_text"/>
    <ListView
        android:id="@+id/ss_main_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ss_search_view"
        android:divider="@color/ss_list_view_divider"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_view_row_selector"/>

</RelativeLayout>
